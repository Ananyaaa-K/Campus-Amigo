// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      String   @default("student") // student, admin
  karma     Int      @default(0)
  createdAt DateTime @default(now())

  // Relations
  notes     Note[]
  meals     Meal[]     @relation("SuggestedMeals")
  products  Product[]
  lostItems LostItem[]
  posts     Post[]
  reviews   Review[]
}

model Meal {
  id         Int      @id @default(autoincrement())
  name       String
  cuisine    String
  rating     Float    @default(0.0)
  distance   String
  price      String // ₹, ₹₹, ₹₹₹
  status     String // Open Now, Closed
  imageClass String? // e.g. bg-orange-100 (for demo visual)
  imageUrl   String? // Image URL for the meal spot
  menuItems  String // JSON string or comma separated for simplicity
  latitude   Float?
  longitude  Float?
  createdAt  DateTime @default(now())

  suggestedBy User?   @relation("SuggestedMeals", fields: [userId], references: [id])
  userId      String?
  reviews     Review[]
}

model Note {
  id            Int      @id @default(autoincrement())
  title         String
  subject       String
  displayAuthor String? // For manual overrides or external
  semester      String
  downloads     Int      @default(0)
  size          String
  fileType      String // PDF, DOCX
  fileUrl       String? // Optional for now (demo)
  createdAt     DateTime @default(now())

  uploadedBy User?   @relation(fields: [userId], references: [id])
  userId     String?
}

model Pyq {
  id        Int      @id @default(autoincrement())
  year      String
  subject   String
  semester  String   @default("General") // 1st Semester, 2nd Semester, etc.
  fileUrl   String?
  createdAt DateTime @default(now())
}

model Event {
  id           Int      @id @default(autoincrement())
  title        String
  date         String
  location     String
  category     String // Tech, Cultural, Sports
  description  String?
  participants String? // e.g. "200+ registered"
  createdAt    DateTime @default(now())
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  price       Float
  description String
  image       String?
  category    String   @default("General")
  status      String   @default("Available") // Available, Sold
  createdAt   DateTime @default(now())

  seller   User?   @relation(fields: [sellerId], references: [id])
  sellerId String?
}

model LostItem {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String
  status      String   @default("Lost") // Lost, Found
  image       String?
  contactInfo String?
  createdAt   DateTime @default(now())

  reportedBy User?   @relation(fields: [userId], references: [id])
  userId     String?
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  image     String?
  likes     Int      @default(0)
  createdAt DateTime @default(now())

  author   User?   @relation(fields: [authorId], references: [id])
  authorId String?
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int      @default(5)
  comment   String?
  createdAt DateTime @default(now())

  meal      Meal     @relation(fields: [mealId], references: [id])
  mealId    Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Query {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
}
